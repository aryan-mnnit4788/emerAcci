<!DOCTYPE html>
<html>
<head>
  <title>Sign Up</title>
  <link rel="stylesheet" type="text/css" href="/css/userSignup.css">
</head>
<body>
  {{> header}}


  <div class="container">
    <h2>Sign Up</h2>


    <form id="signup-form" method="post">
      <div class="form-group">
        <label for="hospitalName">HospitalName:</label>
        <input type="text" id="hospitalName" name="hospitalName" required>
      </div>
      
 <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
      </div>




      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      
      <button type="submit" id="submit" name="submit">Sign Up</button>
    </form>
  </div>
<a href="/hospitals/login" style="text-decoration: none; text-align: center; display: block;">Already have an account?</a>
<a href="/users/signup" style="text-decoration: none; text-align: center; display: block;">Register as a person</a>

  <script src="/js/hospitalSignup.js"></script>
    {{> footer}}
</body>
</html>